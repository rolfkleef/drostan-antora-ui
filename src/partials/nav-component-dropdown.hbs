{{#if (eq site.components.length 1)}}
<a class="navbar-item" href="#">{{page.component.title}}</a>
{{else}}
<div class="navbar-item has-dropdown is-hoverable">
  {{#if page.component}}
    <a class="navbar-link">{{page.component.title}}</a>
  {{else}}
    <a class="navbar-link">Components</a>
  {{/if}}
  <div class="navbar-dropdown">
    {{#each site.components}}
      {{#unless (eq this @root.page.component)}}
        <a class="navbar-item" href="{{{relativize ./url}}}">{{{./title}}}</a>
      {{/unless}}
    {{/each}}
  </div>
</div>
{{/if}}
