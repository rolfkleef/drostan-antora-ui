{{#each navigation}}
  {{#if ./content}}
    {{#if ./items.length}}
      <details {{#unless sublevel}}open=""{{/unless}}>
        <summary>
          {{> nav-tree-item}}
        </summary>
    {{else}}
      <div>{{> nav-tree-item}}</div>
    {{/if}}
  {{/if}}
  {{> nav-tree navigation=./items level=(increment ../level) sublevel=true}}
  {{#if ./content}}
    {{#if ./items.length}}
      </details>
    {{/if}}
  {{/if}}
{{/each}}
